<h1 class="text-4xl font-bold">Food</h1>
{{#if (isAdmin user.role)}}
  <a class="inline-block p-2 text-lg font-bold text-white bg-red-700" href="/food/addFood">Add Food</a>
{{/if}}
<section class="flex flex-col gap-2">
{{#each food}}
  <article class="border-4 border-black p-4 bg-yellow-200">
    {{#if (isAdmin ../user.role)}}
      <a class="inline-block p-2 text-lg font-bold text-white bg-red-700" href="/food/{{ this.id }}/edit">Edit</a>
      <a class="inline-block p-2 text-lg font-bold text-white bg-red-700" href="/food/{{ this.id }}/delete">Delete</a>
    {{/if}}
    <h3 class="text-2xl font-bold">{{ this.name }}</h3>
    <p>{{ this.price }}</p>
    {{#if this.categories}}
    <ul>
      {{#each this.categories}}
        <li>{{ this.category.name }}</li>
      {{/each}}
    </ul>
    {{else}}
      <p>No Category specified</p>
    {{/if}}
    <img class="w-36 h-36" src="{{ this.image }}" alt="{{ this.name }}">
  </article>
{{/each}}
</section>
